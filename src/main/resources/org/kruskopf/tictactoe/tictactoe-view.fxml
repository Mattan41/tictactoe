<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kruskopf.tictactoe.TicTacToeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="10.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="10.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="10.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="110.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="110.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="2" onMouseClicked="#imageClicked" />
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="110.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="210.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" onMouseClicked="#imageClicked"/>
         <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="210.0" layoutY="-20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="2" onMouseClicked="#imageClicked"/>
       </children>
   </GridPane>
</VBox>
