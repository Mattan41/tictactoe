<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kruskopf.tictactoe.TicTacToeController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="500.0">
         <VBox alignment="BOTTOM_CENTER" spacing="20.0">
            <Label fx:id="playerScoreLabel"/>
         </VBox>
         <GridPane alignment="CENTER" layoutX="100.0" layoutY="100.0" prefHeight="300.0" prefWidth="300.0">
            <Button fx:id="button1" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#onButtonClicked"/>
            <Button fx:id="button2" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onButtonClicked"/>
            <Button fx:id="button3" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#onButtonClicked"/>
            <Button fx:id="button4" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#onButtonClicked"/>
            <Button fx:id="button5" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onButtonClicked"/>
            <Button fx:id="button6" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#onButtonClicked"/>
            <Button fx:id="button7" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#onButtonClicked"/>
            <Button fx:id="button8" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#onButtonClicked"/>
            <Button fx:id="button9" disable="true" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#onButtonClicked"/>
         </GridPane>

         <Button fx:id="newMatch" contentDisplay="CENTER" layoutX="211.0" layoutY="427.0" mnemonicParsing="false" disable="true" onAction="#restartGame" text="New match" />
         <ChoiceBox fx:id="gameMode" layoutX="169.0" layoutY="62.0" prefWidth="150.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="SinglePlayer" />
               <String fx:value="Multiplayer" />
            </FXCollections>
         </items>
      </ChoiceBox>
         <Text fx:id="winner" layoutX="160.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tic-Tac-Toe">
            <font>
               <Font name="Comic Sans MS Bold Italic" size="27.0" />
            </font>
            <effect>
               <Glow />
            </effect>
         </Text>
      </AnchorPane>
   </center>
</BorderPane>
